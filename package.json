{
  "name": "aceengineer-website",
  "version": "1.0.0",
  "scripts": {
    "build": "node build.js",
    "serve": "npx serve dist",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "projects": [
      {
        "displayName": "node",
        "testMatch": ["<rootDir>/tests/js/build.test.js"]
      },
      {
        "displayName": "jsdom",
        "testEnvironment": "jsdom",
        "testMatch": ["<rootDir>/tests/js/navbar-toggle.test.js"]
      }
    ],
    "collectCoverageFrom": [
      "build.js",
      "assets/js/navbar-toggle.js"
    ]
  },
  "devDependencies": {
    "clean-css": "^5.3.3",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "posthtml": "^0.16.6",
    "posthtml-expressions": "^1.11.3",
    "posthtml-include": "^2.0.1",
    "purgecss": "^8.0.0"
  }
}
